<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.modernart.MainActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:id="@+id/upHorizView"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/greenView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#34cc12"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/purpleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#551122"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/downView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/orangeView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ffab00"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blueView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#1abab0"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <SeekBar
            android:id="@+id/my_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#000000" />
    </RelativeLayout>

</LinearLayout>